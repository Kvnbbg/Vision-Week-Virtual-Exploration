-- Create the Animals table
CREATE TABLE Animals (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    name VARCHAR(255),
    type VARCHAR(255),
    country_id INTEGER
);

-- Create the Countries table
CREATE TABLE Countries (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    country VARCHAR(255)
);

