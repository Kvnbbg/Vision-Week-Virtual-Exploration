{
  "name": "vision-week-virtual-exploration",
  "version": "2.0.0",
  "description": "Virtual exploration application for Vision Week with modern architecture",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest tests/unit --coverage",
    "test:integration": "jest tests/integration --coverage",
    "test:e2e": "playwright test tests/e2e",
    "test:performance": "node tests/performance/performance-test.js",
    "test:security": "npm audit && snyk test",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/ tests/ --ext .js,.ts,.jsx,.tsx",
    "lint:fix": "eslint src/ tests/ --ext .js,.ts,.jsx,.tsx --fix",
    "format": "prettier --write \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,ts,jsx,tsx,json,css,md}\"",
    "build": "npm run build:flutter && npm run build:assets",
    "build:flutter": "flutter build web --release",
    "build:assets": "webpack --mode=production",
    "dev": "concurrently \"npm run dev:flutter\" \"npm run dev:api\"",
    "dev:flutter": "flutter run -d web-server --web-port=3000",
    "dev:api": "php -S localhost:8080 -t public/",
    "start": "npm run build && npm run serve",
    "serve": "http-server build/web -p 8080 -c-1",
    "docker:build": "docker build -t vision-week-app .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "deploy:railway": "./scripts/railway-deploy.sh production deploy",
    "deploy:k8s": "./scripts/deploy.sh production deploy",
    "security:scan": "npm run security:deps && npm run security:code",
    "security:deps": "npm audit && snyk test",
    "security:code": "semgrep --config=auto src/",
    "performance:lighthouse": "lighthouse http://localhost:8080 --output=json --output-path=./tests/performance/results/lighthouse-report.json",
    "performance:full": "npm run test:performance",
    "docs:generate": "jsdoc src/ -r -d docs/",
    "docs:serve": "http-server docs/ -p 3001",
    "clean": "rm -rf node_modules build coverage .nyc_output",
    "precommit": "npm run lint && npm run format:check && npm run test:unit",
    "prepare": "husky install"
  },
  "keywords": [
    "virtual-exploration",
    "animals",
    "education",
    "flutter",
    "php",
    "docker",
    "kubernetes",
    "railway"
  ],
  "author": "Vision Week Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kvnbbg/vision-week-virtual-exploration.git"
  },
  "bugs": {
    "url": "https://github.com/kvnbbg/vision-week-virtual-exploration/issues"
  },
  "homepage": "https://github.com/kvnbbg/vision-week-virtual-exploration#readme",
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "audit-ci": "^6.6.1",
    "chrome-launcher": "^1.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-playwright": "^0.18.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^8.0.3",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc": "^4.0.2",
    "lighthouse": "^11.3.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "snyk": "^1.1248.0",
    "supertest": "^6.3.3",
    "typescript": "^5.2.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "dotenv": "^16.3.1"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"],
    "collectCoverageFrom": [
      "src/**/*.{js,ts,jsx,tsx}",
      "!src/**/*.d.ts",
      "!src/**/index.{js,ts}",
      "!src/**/*.stories.{js,ts,jsx,tsx}",
      "!src/**/*.test.{js,ts,jsx,tsx}",
      "!src/**/*.spec.{js,ts,jsx,tsx}"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text",
      "lcov",
      "html",
      "json"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.{js,ts,jsx,tsx}",
      "<rootDir>/tests/**/*.spec.{js,ts,jsx,tsx}"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    }
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:jest/recommended",
      "plugin:playwright/recommended",
      "plugin:security/recommended",
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "jest",
      "playwright",
      "security"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jest": true,
      "es2022": true
    },
    "rules": {
      "no-console": "warn",
      "no-debugger": "error",
      "no-unused-vars": "error",
      "prefer-const": "error",
      "security/detect-object-injection": "error",
      "security/detect-non-literal-regexp": "error",
      "security/detect-unsafe-regex": "error"
    },
    "overrides": [
      {
        "files": ["tests/**/*"],
        "rules": {
          "no-console": "off"
        }
      }
    ]
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:unit"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ]
}

